<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user, { size: 40 } %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
	<div class="span8">
		<% if @user.goals.any? %>
			<h3><%= pluralize(@user.goals.count, "goal") %></h3>
			<ol class="goals">
				<%= render @goals %>
			</ol>
			<%= will_paginate @goals %>			
		<% end %>
	</div>
</div>