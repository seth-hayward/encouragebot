<%= form_for(@update) do |f| %>
	<%= f.label :value %>
	<%= f.text_field :value, :class => "update_value" %>
	<%= f.submit "Add update", class: "btn btn-large btn-primary submit_update" %>	
	<%= f.label :notes %>
	<%= f.text_area :notes, :class => "update_notes" %>
	<%= hidden_field_tag 'goal_id', @goal.id %>
<% end %>